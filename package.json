{
  "name": "writers-mark",
  "homepage": "https://github.com/FrancoisChabot/writers-mark#readme",
  "version": "0.4.1",
  "description": "Easy, safe and flexible markup for user-generated content.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/rewire": "^2.5.28",
    "ava": "^3.13.0",
    "codecov": "^3.8.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.0",
    "rewire": "^5.0.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text-summary ava",
    "coverage": "codecov",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src"
  },
  "files": [
    "lib/**/*"
  ],
  "bugs": "https://github.com/writers-mark/writers-mark-ts/issues",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FrancoisChabot/writers-mark.git"
  },
  "author": "Francois Chabot",
  "license": "ISC"
}
